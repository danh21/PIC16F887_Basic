#include <main.h>

void main() {
   unsigned char count = 0;

   while (TRUE) 
   {
      //TODO: User Code
 //     output_low(PIN_B0);  // display led smoothly
      
      /* 0 -> 9 */
      while (count < 9) {
         Led7Seg_OUT(count++);         
         delay_ms(500);
      }
      
      /* 9 -> 0 */
      while (count > 0) {
         Led7Seg_OUT(count--);
         delay_ms(500);
      }
   }
}
