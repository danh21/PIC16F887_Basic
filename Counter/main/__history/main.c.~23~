#include <main.h>

void main() {
   unsigned char count = 0;

   while(TRUE) {
      //TODO: User Code
      while(count < 10) {
         Led7Seg_OUT(count++);
         output_low(PIN_B0);  // display led smoothly 
         delay_ms(500);
      }
      
      while(count > 0) {
         Led7Seg_OUT(count--);
         output_low(PIN_B0);
         delay_ms(500);
      }
   }
}
