#include <main.h>

unsigned char number[10] = {0xC0, 0xF9, 0xA4, 0xB0, 0x99, 0x92, 0x82, 0xF8, 0x80, 0x90};

void display_led7seg(int value) {
   int dozens, units;
   dozens = value / 10;
   units = value % 10;
   
   for (int i = 50; i > 0; i--) {
   
      Led7Seg2(1);      
      Led7Seg1(0);          
      Led7Seg_OUT(number[dozens]);
      //delay_ms(1);
      
      
      Led7Seg1(1);          
      Led7Seg2(0);
      Led7Seg_OUT(number[units]);
      //delay_ms(1);
      
       
   }
}

void main()
{
   int count = 0;
   
   while(TRUE)
   {
      //TODO: User Code
      display_led7seg(count++);
      delay_ms(500);
      if (count == 100)
         count = 0;      
   }
}
